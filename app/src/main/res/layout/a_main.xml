<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.kirchhoff.example.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/recyclerViewWithSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/recyclerview.with.search" />

        <Button
            android:id="@+id/fabAnimationExample"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
	        android:text="@string/fab_animation_example" />

        <Button
            android:id="@+id/customRecyclerSwipe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/custom_recycler_swipe_example" />

        <Button
            android:id="@+id/recyclerCollapsing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/recycler_collapsing_example" />

        <Button
            android:id="@+id/vpWithoutFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/vp.without.fragment" />

        <Button
            android:id="@+id/timeDiffUtil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/time_diff_utils_example" />

        <Button
            android:id="@+id/likeButtonClick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/like_button_title" />

        <Button
            android:id="@+id/countDownLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/countdown.label.title" />

        <Button
            android:id="@+id/simpleTransition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/simple.transition.title" />

        <Button
            android:id="@+id/customCoordinateLayoutBehavior"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/coordinator.layout.behavior.title" />

        <Button
            android:id="@+id/mvpRecycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/mvp.recycler.view.title" />

        <Button
            android:id="@+id/thingDiffUtils"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/diff.util.example.2" />

        <Button
            android:id="@+id/fastRecyclerViewExample"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/fast.recycler.view" />

        <Button
            android:id="@+id/curvedBottomBarExample"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/curved.bottom.bar" />

    </LinearLayout>

</ScrollView>
