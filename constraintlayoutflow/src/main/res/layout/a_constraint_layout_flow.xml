<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingConstraints">

    <View
        android:id="@+id/item1"
        android:layout_width="@dimen/flow_item_size"
        android:layout_height="@dimen/flow_item_size"
        android:background="@android:color/black"
        android:layout_marginHorizontal="@dimen/flow_item_horizontal_margin" />

    <View
        android:id="@+id/item2"
        android:layout_width="@dimen/flow_item_size"
        android:layout_height="@dimen/flow_item_size"
        android:background="@android:color/holo_blue_bright"
        android:layout_marginHorizontal="@dimen/flow_item_horizontal_margin" />

    <View
        android:id="@+id/item3"
        android:layout_width="@dimen/flow_item_size"
        android:layout_height="@dimen/flow_item_size"
        android:background="@android:color/holo_blue_light"
        android:layout_marginHorizontal="@dimen/flow_item_horizontal_margin" />

    <View
        android:id="@+id/item4"
        android:layout_width="@dimen/flow_item_size"
        android:layout_height="@dimen/flow_item_size"
        android:background="@android:color/holo_red_dark"
        android:layout_marginHorizontal="@dimen/flow_item_horizontal_margin" />

    <View
        android:id="@+id/item5"
        android:layout_width="@dimen/flow_item_size"
        android:layout_height="@dimen/flow_item_size"
        android:background="@android:color/holo_orange_dark"
        android:layout_marginHorizontal="@dimen/flow_item_horizontal_margin" />

    <View
        android:id="@+id/item6"
        android:layout_width="@dimen/flow_item_size"
        android:layout_height="@dimen/flow_item_size"
        android:background="@android:color/holo_green_dark"
        android:layout_marginHorizontal="@dimen/flow_item_horizontal_margin" />

    <View
        android:id="@+id/item7"
        android:layout_width="@dimen/flow_item_size"
        android:layout_height="@dimen/flow_item_size"
        android:background="@android:color/holo_purple"
        android:layout_marginHorizontal="@dimen/flow_item_horizontal_margin" />

    <View
        android:id="@+id/item8"
        android:layout_width="@dimen/flow_item_size"
        android:layout_height="@dimen/flow_item_size"
        android:background="@android:color/holo_red_light"
        android:layout_marginHorizontal="@dimen/flow_item_horizontal_margin" />

    <View
        android:id="@+id/item9"
        android:layout_width="@dimen/flow_item_size"
        android:layout_height="@dimen/flow_item_size"
        android:background="@android:color/holo_green_light"
        android:layout_marginHorizontal="@dimen/flow_item_horizontal_margin" />

    <View
        android:id="@+id/item10"
        android:layout_width="@dimen/flow_item_size"
        android:layout_height="@dimen/flow_item_size"
        android:background="@android:color/holo_orange_light"
        android:layout_marginHorizontal="@dimen/flow_item_horizontal_margin" />

    <androidx.constraintlayout.helper.widget.Flow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="item1, item2, item3, item4, item5, item6, item7, item8, item9, item10"
        app:flow_wrapMode="aligned"
        app:flow_firstHorizontalStyle="spread_inside"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>